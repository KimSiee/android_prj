<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1190dp"
        android:layout_height="590dp"
        android:orientation="vertical"
        android:background="#f6f6f6"
        tools:ignore="MissingConstraints">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btHome_connectorwait"
                style="@style/WhiteTextWithShadow"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:background="@drawable/button_selector"
                android:text="@string/string_home"
                android:fontFamily="@font/modernhmedium"
                android:textColor="@android:color/background_light"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_connectorwait"
                android:layout_width="500dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:layout_marginStart="20dp"

                android:src="@drawable/connector_input" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginStart="550dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/modernhmedium"
                android:text="@string/string_connector_wait"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="550dp"
                android:layout_marginTop="110dp"
                android:fontFamily="@font/modernhmedium"
                android:gravity="left"
                android:text="@string/string_conector_begin_charging"
                android:textSize="52sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_connectorwait1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="350dp"
                android:fontFamily="@font/modernhmedium"
                android:gravity="left"
                android:text="* 해당 충전기는 충전량(kWh) 기준으로 금액이 차감됩니다."
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>