<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1190dp"
        android:layout_height="590dp"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:weightSum="1"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="15dp"
            >

            <ImageView
                android:id="@+id/imageReservStat"
                android:layout_width="490dp"
                android:layout_height="450dp"
                android:scaleType="fitXY"
                android:layout_marginStart="45dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/poscoimg_resrvinfo" />
            <TextView
                android:id="@+id/tvCurrTime"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="현재시간"
                android:textSize="30sp"
                android:fontFamily="@font/modernhmedium"
                android:textStyle="bold"
                android:textColor="@android:color/tertiary_text_dark"
                android:layout_marginStart="90dp"
                android:layout_marginTop="170dp"
                />

            <TextView
                android:id="@+id/tvReservName"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:gravity="center"
                android:text="예약자\n없음"
                android:textSize="25sp"
                android:fontFamily="@font/modernhmedium"
                android:textStyle="bold"
                android:textColor="@android:color/tertiary_text_dark"
                android:layout_marginStart="90dp"
                android:layout_marginTop="350dp"
                />
            <TextView
                android:id="@+id/tvReservTime"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:text="00:00:00"
                android:gravity="center"
                android:textSize="25sp"
                android:fontFamily="@font/modernhmedium"
                android:textStyle="bold"
                android:textColor="@android:color/tertiary_text_dark"
                android:layout_marginStart="390dp"
                android:layout_marginTop="340dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="15dp"
            >
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="20dp"
                android:text="충전을 시작하시려면\n시작버튼을 눌러주세요."
                android:fontFamily="@font/modernhmedium"
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="50sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btStart"
                android:layout_width="500dp"
                android:layout_height="150dp"
                android:layout_below="@+id/title1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_selector"
                android:fontFamily="@font/modernhmedium"
                android:text="충전 시작"
                android:textColor="@android:color/background_light"
                android:textSize="60sp"
                android:textStyle="bold" />
        </RelativeLayout>



    </LinearLayout>
</android.support.constraint.ConstraintLayout>