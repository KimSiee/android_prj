<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="1142dp"
            android:layout_height="594dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_number_frame">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:fontFamily="sans-serif-medium"
                android:text="회원카드의 비밀번호를 입력하세요"
                android:textColor="#7c808d"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tvInputPwd"
                android:layout_width="640dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="76dp"
                android:gravity="center"
                android:password="false"
                android:text="****"
                android:textColor="#ffffff"
                android:textSize="54sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="790dp"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btPwdBS"
                    android:layout_width="133dp"
                    android:layout_height="114dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/btsel_bs" />

                <ImageButton
                    android:id="@+id/btPwdRefresh"
                    android:layout_width="133dp"
                    android:layout_height="114dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/btsel_re" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1000dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="210dp"
                android:orientation="vertical"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btPwd1"
                        android:layout_width="147dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_num_1" />

                    <ImageButton
                        android:id="@+id/btPwd2"
                        android:layout_width="147dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_num_2" />

                    <ImageButton
                        android:id="@+id/btPwd3"
                        android:layout_width="147dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_num_3" />

                    <ImageButton
                        android:id="@+id/btPwd4"
                        android:layout_width="147dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_num_4" />

                    <ImageButton
                        android:id="@+id/btPwd5"
                        android:layout_width="147dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_num_5" />

                    <ImageButton
                        android:id="@+id/btPwdOK"
                        android:layout_width="187dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_ok" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btPwd6"
                        android:layout_width="147dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_num_6" />

                    <ImageButton
                        android:id="@+id/btPwd7"
                        android:layout_width="147dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_num_7" />

                    <ImageButton
                        android:id="@+id/btPwd8"
                        android:layout_width="147dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_num_8" />

                    <ImageButton
                        android:id="@+id/btPwd9"
                        android:layout_width="147dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_num_9" />

                    <ImageButton
                        android:id="@+id/btPwd0"
                        android:layout_width="147dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_num_0" />

                    <ImageButton
                        android:id="@+id/btPwdCancel"
                        android:layout_width="187dp"
                        android:layout_height="138dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btsel_cancel" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>