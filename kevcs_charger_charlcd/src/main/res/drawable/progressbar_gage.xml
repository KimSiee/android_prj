<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180"
            android:pivotX="50%"
            android:pivotY="82%" >
                <shape
                    android:innerRadiusRatio="3.80"
                    android:shape="ring"
                    android:thicknessRatio="6.1" >
                    <gradient
                        android:startColor="#AAAAFF00"
                        android:centerColor="#AA008CFF"
                        android:endColor="#AAC010F0"
                        android:angle="180"/>
                </shape>
        </rotate>
    </item>

</layer-list>