<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="111dp">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linearLayout5"
            android:layout_marginStart="246dp"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif-medium"
            android:text="결제단계"
            android:textColor="#7c808d"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageCreditCardTag"
            android:layout_width="544dp"
            android:layout_height="544dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ani_credit_card" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageCreditCardTag"
            android:gravity="center"
            android:text="카드 리더기에 신용카드를 접촉해 주세요"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="624dp"
            android:layout_height="279dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/infobox_credit"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:paddingEnd="20dp"
            android:paddingLeft="30dp"
            android:paddingTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPrePay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="1. 선결제"
                    android:textColor="#37ffff"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvPrePayValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="50,000원"
                    android:textColor="#ff7d00"
                    android:textSize="44sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRealPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="2. 실충전금액 결제"
                    android:textColor="#7a7c84"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvRealPayValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="50,000원"
                    android:textColor="#ff7d00"
                    android:textSize="44sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPrePayCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="3. 선결제 취소"
                    android:textColor="#7a7c84"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvPrePayCancelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="50,000원"
                    android:textColor="#ff7d00"
                    android:textSize="44sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>