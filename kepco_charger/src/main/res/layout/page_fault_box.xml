<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1280dp"
    android:layout_height="720dp"
    android:layout_marginTop="-85dp"
    android:background="@drawable/kepco_bg"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="1088dp"
            android:layout_height="510dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="149dp"
            android:background="@drawable/popup"
            android:elevation="15dp">

            <TextView
                android:id="@+id/tvFaultBoxTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="53dp"
                android:text="충전기 오류"
                android:textColor="#ffffff"
                android:textSize="50sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvFaultBoxContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFaultBoxTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="40dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:maxLines="4"
                android:text="content"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="45sp"
                android:visibility="visible" />

        </RelativeLayout>

    </RelativeLayout>
</android.widget.FrameLayout>